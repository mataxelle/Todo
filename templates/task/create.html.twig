{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
        <div class="input-field mb-3">
	        {{ form_label(form.title, 'Titre') }}
	        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
	        <span class="error">{{ form_errors(form.title) }}</span>
        </div>
        <div class="input-field mb-3">
	        {{ form_label(form.content, 'Contenu') }}
	        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
	        <span class="error">{{ form_errors(form.content) }}</span>
        </div>
       
        <div class="mb-3">
	        <input type="submit" class="btn btn-success pull-right" value="Ajouter" formnovalidate>
        </div>
    {{ form_end(form) }}

        <a href="{{ path('task_list', {'id': app.user.id}) }}" class="btn btn-primary">Retour à la liste des tâches</a>
{% endblock %}
