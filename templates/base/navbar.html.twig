								<li>
									<a class="dropdown-item" href="{{ path('admin_tasks_list') }}">Tâches</a>
								</li>
							</ul>
						</li>
					{% endif %}
					{% if app.user %}
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Mes tâches
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="{{ path('task_create') }}">Créer une nouvelle tâche</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('task_list', {'id': app.user.id}) }}">Tâches à faire</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('done_task_list', {'id': app.user.id}) }}">Tâches terminées</a>
								</li>
							</ul>
						</li>
