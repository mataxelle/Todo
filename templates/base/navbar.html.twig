								<li>
									<a class="dropdown-item" href="{{ path('user_edit_password', {'id' : app.user.id }) }}">Modifier mon mot de passe</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('logout') }}">Déconnexion</a>
								</li>
