{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.name }}</strong></h1>{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'attr': {'class': 'col-12 col-md-10 col-lg-7 mx-auto mb-5'}}) }}
            <div class="input-field mb-3">
	            {{ form_label(form.name, 'Nom') }}
	            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
	            <span class="error">{{ form_errors(form.name) }}</span>
            </div>
            <div class="input-field mb-3">
	            {{ form_label(form.email, 'Email') }}
	            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
	            <span class="error">{{ form_errors(form.email) }}</span>
            </div>
            <div class="mb-3">
	            <input type="submit" class="btn btn-success" value="Modifier" formnovalidate>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
