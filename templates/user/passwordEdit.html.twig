{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier mot de passe</h1>{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'col-12 col-md-10 col-lg-7 mx-auto mb-5'}}) }}
        <div class="input-field mb-3">
	        {{ form_label(form.password.first, 'Nouveau mot de passe') }}
	        {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_label(form.password.second, 'Confirmation du nouveau mot de passe') }}
	        {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
	        <input type="submit" class="btn btn-success" value="Modifier" formnovalidate>
        </div>
    {{ form_end(form) }}
{% endblock %}
